<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:elevation="4dp"
    app:behavior_peekHeight="74dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/destination_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search destination"
        android:padding="22dp"
        android:textColor="@color/color_primary_text_dark"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/travel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Come viaggi?"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <ImageButton
        android:id="@+id/bus_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/btn_background_unselected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_bus_black"
        app:layout_constraintLeft_toRightOf="@+id/travel_txt"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <ImageButton
        android:id="@+id/train_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/btn_background_unselected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_train_black"
        app:layout_constraintLeft_toRightOf="@+id/bus_btn"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <ImageButton
        android:id="@+id/plane_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/btn_background_unselected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_plane_black"
        app:layout_constraintLeft_toRightOf="@+id/train_btn"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <TextView
        android:id="@+id/radious_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Raggio (km)"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/travel_txt" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/radius_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:max="50"
        app:dsb_progressColor="@color/color_accent"
        app:dsb_indicatorColor="@color/color_accent"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radious_txt"
        app:dsb_min="1"
        app:dsb_max="50" />

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Suoneria"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius_seekbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>