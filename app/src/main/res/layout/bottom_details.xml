<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:elevation="4dp"
    app:behavior_peekHeight="74dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/destination_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search destination"
        android:padding="22dp"
        android:textColor="@color/color_primary_text_dark"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Raggio (km)"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/radius_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:max="50"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/radius_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/radius_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/radius_seekbar" />

    <TextView
        android:id="@+id/max_radius_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="50"
        app:layout_constraintRight_toRightOf="@+id/radius_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/radius_seekbar" />

