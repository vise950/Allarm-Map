<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:elevation="4dp"
    app:behavior_peekHeight="74dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/destination_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search destination"
        android:padding="22dp"
        android:textColor="@color/color_primary_text_dark"
        android:textSize="@dimen/text_size_24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/travel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="Come viaggi?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_txt" />

    <ImageButton
        android:id="@+id/bus_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_background_selected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_bus_black"
        app:layout_constraintLeft_toRightOf="@+id/travel_txt"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="@+id/travel_txt"
        app:layout_constraintTop_toTopOf="@+id/travel_txt" />

    <ImageButton
        android:id="@+id/train_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:background="@drawable/btn_background_unselected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_train_black"
        app:layout_constraintLeft_toRightOf="@+id/bus_btn"
        app:layout_constraintBottom_toBottomOf="@+id/bus_btn" />

    <ImageButton
        android:id="@+id/plane_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:background="@drawable/btn_background_unselected"
        android:contentDescription="@string/description"
        android:elevation="@dimen/elevation_8dp"
        android:src="@drawable/ic_plane_black"
        app:layout_constraintLeft_toRightOf="@+id/train_btn"
        app:layout_constraintBottom_toBottomOf="@+id/train_btn" />

    <TextView
        android:id="@+id/radius_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="Raggio (km)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_txt" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/radius_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:dsb_progressColor="@color/color_accent"
        app:dsb_indicatorColor="@color/color_accent"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius_txt"
        app:dsb_min="1"
        app:dsb_max="50" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/alarm_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:checked="true"
        android:text="Suoneria"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius_seekbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color_secondary_text" />
</android.support.constraint.ConstraintLayout>