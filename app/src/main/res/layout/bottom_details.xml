    android:layout_height="300dp"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:elevation="4dp"
    app:behavior_peekHeight="74dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

